%h2 Forgot your password?
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'card' }) do |f|
  .card-body
    = devise_error_messages!
    .form-group
      = f.label :email
      = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
    .actions
      = f.submit 'Send me reset password instructions', class: 'btn btn-primary mt-4'
= render 'devise/shared/links'
